{% extends 'layout.twig' %}

{% block title %} Start looking fly! {% endblock %}

{%block body %}
{#
This is how you make a comment!
#}

<div class="hero-unit">
	<h1>{{ pageData.title }}</h1>
  <p>
  {{pageData.summary}}
  </p>
  
{% if pageData.hasSale %}
<div class="sale-ends-at">
  Sale Ends: {{ saleEndsAt|date('D M jS ga')}}
  </div>
{% endif %}
</div>

{{ include('_banner.twig', {'backgroundColor': 'violet'}) }}

<div class="row">
	{% for product in products %}
		<div class="span4">
			<h2>{{ product.getName() }}</h2>

      <div class="product-img">
        <img src="../assets/images/{{ product.getimagePath()}}" alt="{{ product.getName() }}",
        </div>
        
            {# <div class="price">
            {{ (random()/100)|number_format(1)}}

            {% if random(10) < 5 %}
              <div>Wow, this is some cheap swag!</div>
              {% endif %}
            </div> #}
		</div>
	{% endfor %}

    {% if products|length == 0 %}
      <div class ="alert alert-error span12">
      Oh no! We're all out of super-awesome penguin clothes!
      </div>
    {% endif %}
</div>

{% endblock %}